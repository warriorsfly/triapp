<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wxsoft.triapp">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/Theme.Triapp">
        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/Theme.Triapp.AppBarOverlay"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/Theme.Triapp.AppBarOverlay" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.widgets.FragmentContainerActivity"
            android:theme="@style/Theme.Triapp"/>


        <activity
            android:name=".ui.patient.PatientActivity"
            android:theme="@style/Theme.Triapp"/>

        <activity
            android:name=".ui.rating.RatingSubjectActivity"
            android:theme="@style/Theme.Triapp" />
    </application>

</manifest>